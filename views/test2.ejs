<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body text-center">
      <p>Submit your new release</p>
      <form action="/submit-release" method="POST">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Artist Name" name="artist">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Song Title" name="title">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Release URL (Google Drive)" name="releaseUrl">
        </div>
        <div class="form-group">
          <textarea class="form-control" placeholder="Description" name="description" rows="4"></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-2">Submit</button>
      </form>
    </div>
  </div>
</div>
